{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Git - Mise à jour et nettoyage local",
            "type": "shell",
            "linux": {
                "command": "git",
                "args": [
                    "pull",
                    "origin",
                    "--rebase=false",
                    ";",
                    "git",
                    "remote",
                    "prune",
                    "origin",
                    ";",
                    "git",
                    "branch",
                    "--merged",
                    "|",
                    "grep",
                    "-i",
                    "-v",
                    "-E",
                    "\"master|gh-pages\"",
                    "|",
                    "xargs",
                    "git",
                    "branch",
                    "-d"
                ]
            },
            "windows": {
                "command": "git",
                "args": [
                    "pull",
                    "origin",
                    "|",
                    "git",
                    "remote",
                    "prune",
                    "origin",
                    "|",
                    "git",
                    "branch",
                    "--merged",
                    "|",
                    "Select-String",
                    "-Pattern",
                    "'^(?!.*(master|gh-pages)).*$'",
                    "|",
                    "ForEach-Object",
                    "{",
                    "git",
                    "branch",
                    "-d",
                    "$_.ToString().Trim()",
                    "}"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "Markdown - Correction automatique du fichier courant",
            "type": "shell",
            "command": "yarn",
            "args": [
                "markdownlint",
                "-f",
                "${file}"
            ],
            "problemMatcher": [
                "$markdownlint"
            ]
        },
        {
            "label": "Python - Installation et mise à jour des dépendances",
            "type": "shell",
            "osx": {
                "command": "${config:python.defaultInterpreterPath} -m pip install -U -r requirements-free.txt"
            },
            "windows": {
                "command": "${config:python.defaultInterpreterPath} -m pip install -U -r requirements-free.txt"
            },
            "linux": {
                "command": "${config:python.defaultInterpreterPath} -m pip install -U -r requirements-free.txt"
            },
            "problemMatcher": []
        },
        {
            "label": "Mkdocs - Générer le site (config PROD)",
            "group": "build",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "mkdocs",
                "build",
                "--strict",
                "--config-file",
                "mkdocs.yml"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Mkdocs - Servir le site localement (config MINIMALE)",
            "group": "test",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "mkdocs",
                "serve",
                "-f",
                "mkdocs-minimal.yml",
                "--dirtyreload"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
